{
    "name": "kobkob/kob-git-updater",
    "description": "WordPress plugin for installing and updating plugins/themes from GitHub repositories",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Monsenhor Filipo",
            "email": "filipo@kobkob.org"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "wp-coding-standards/wpcs": "^3.0",
        "phpstan/phpstan": "^1.10",
        "mockery/mockery": "^1.6",
        "brain/monkey": "^2.6"
    },
    "autoload": {
        "psr-4": {
            "KobGitUpdater\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "KobGitUpdater\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html=coverage",
        "lint": "phpcs --standard=WordPress src/",
        "lint:fix": "phpcbf --standard=WordPress src/",
        "analyze": "phpstan analyze src/ --level=8"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "extra": {
        "wordpress-install-dir": "vendor/wordpress/wordpress"
    }
}